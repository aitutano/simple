{
  "name": "task-manager-app",
  "version": "1.0.0",
  "description": "Aplicação de gerenciamento de tarefas inspirada no Todoist - Projeto acadêmico",
  "main": "index.js",
  "scripts": {
    "dev": "npm run sass:watch & http-server . -p 3000 -c-1",
    "build": "npm run sass:build",
    "sass:build": "sass assets/scss/main.scss assets/css/compiled.css --style=compressed --no-source-map",
    "sass:watch": "sass assets/scss/main.scss assets/css/compiled.css --watch --style=expanded",
    "sass:dev": "sass assets/scss/main.scss assets/css/compiled.css --style=expanded --no-source-map",
    "start": "npm run dev",
    "json-server": "json-server --watch api/db.json --port 3001"
  },
  "keywords": [
    "todoist",
    "tasks",
    "productivity",
    "academia"
  ],
  "author": "Aluno UTFPR",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "json-server": "^0.17.4"
  }
}
